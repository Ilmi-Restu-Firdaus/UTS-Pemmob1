<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/bcspl">



    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="128dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo" />
    <ImageView
        android:id="@+id/icback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5"
        android:layout_centerHorizontal="true"
        android:text="Register Account"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textView2"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:id="@+id/ly1">

        <EditText
            android:id="@+id/usernm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:hint="Create Username"
            android:textColor="#FFFFFF"
            android:textColorHint="#B3FFFFFF"
            android:padding="12dp"
            android:paddingLeft="10dp"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape"
            android:hint="Create password"
            android:textColorHint="#B3FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:paddingLeft="10dp"
            android:id="@+id/passw"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape"
            android:hint="Confirm password"
            android:textColorHint="#B3FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:paddingLeft="10dp"
            android:id="@+id/passw2"
            android:inputType="textPassword">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/butreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly1"
        android:layout_centerHorizontal="true"
        android:width="350dp"
        android:backgroundTint="#E20E02"
        android:text="Register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/butreq"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/gologin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login"
            android:textColorLink="@color/primaryColor"
            android:clickable="true"
            android:textColor="@color/blue"
            android:textSize="12dp"

            >

        </TextView>

    </LinearLayout>

</RelativeLayout>